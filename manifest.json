{
  "manifest_version": 2,
  "name": "Open Links in New Tab",
  "version": "1.0",
  "description": "A Firefox extension to open all links in a new tab.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
